<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--读取配置-->
    <properties resource="properties/db.properties"/>

    <!--添加到类路径的JAR / ZIP文件的完整路径名，或要添加到类路径的目录。-->
    <!--<classPathEntry location="/Program Files/IBM/SQLLIB/java/db2java.zip" />-->

    <context id="mysqlTables" targetRuntime="MyBatis3" defaultModelType="flat">
        <!-- 这里的type里写的是你的实现类的类全路径 -->
        <commentGenerator type="org.haijun.study.MyCommentGenerator"></commentGenerator>
        <jdbcConnection driverClass="${driver}"
                        connectionURL="${url}"
                        userId="${username}"
                        password="${password}">
        </jdbcConnection>

        <!--指定生成的类型为java类型，避免数据库中number等类型字段 -->
        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--自动生成的实体的存放包路径 -->
        <javaModelGenerator targetPackage="org.haijun.study.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--自动生成的*Mapper.xml文件存放路径 -->
        <sqlMapGenerator targetPackage="mapper"  targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--各个参数具体说明查看https://blog.csdn.net/zsq520520/article/details/50948926-->
        <!--自动生成的*Mapper.java存放路径 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="org.haijun.study.dao"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

<!--        <table schema="DB2ADMIN" tableName="ALLTYPES" domainObjectName="Customer" >
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="ID" sqlStatement="DB2" identity="true" />
            <columnOverride column="DATE_FIELD" property="startDate" />
            <ignoreColumn column="FRED" />
            <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />
        </table>-->

        <!--可以配置多个表,enableCountByExample 可以关闭统计的方法生成，具体参考http://www.mybatis.org/generator/configreference/table.html-->
<!--        <table tableName="数据库表名" domainObjectName="生成的Java名" enableCountByExample="false" >
            <generatedKey column="ID"  sqlStatement="select uuid_short()"   identity="false" />
        </table>-->
        <!--例如要生成全部的表，可以按如下配置：table tableName="%"-->
        <!--schema:数据库的schema,可以使用SQL通配符匹配。如果设置了该值，生成SQL的表名会变成如schema.tableName的形式。-->
        <table tableName="t_test" domainObjectName="Test">
            <generatedKey column="id" sqlStatement="Mysql"/>
        </table>
    </context>
</generatorConfiguration>
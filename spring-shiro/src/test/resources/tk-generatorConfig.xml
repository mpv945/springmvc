<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <!--读取配置-->
    <properties resource="properties/db.properties"/>

    <!--MyBatis3 和 MyBatis3Simple -->
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <property name="javaFileEncoding" value="UTF-8"/>

        <!--不生成注释-->
        <!--<property name="useMapperCommentGenerator" value="false"/>-->

        <!--org.haijun.study.MyTkGenerator（自定义实现不生成set和get）替换，tk默认tk.mybatis.mapper.generator.MapperPlugin -->
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
            <property name="beginningDelimiter" value="`"/>
            <property name="endingDelimiter" value="`"/>
        </plugin>
        <!--<commentGenerator type="tk.mybatis.mapper.generator.MapperCommentGenerator"></commentGenerator>-->

        <jdbcConnection driverClass="${driver}"
                        connectionURL="${url}"
                        userId="${username}"
                        password="${password}">
        </jdbcConnection>

        <!--tk.MyBatis 生成器只需要生成 Model-->
        <javaModelGenerator targetPackage="org.haijun.study.model"
                            targetProject="src/test/java"/>

        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/test/resources"/>

        <javaClientGenerator targetPackage="org.haijun.study.dao"
                             targetProject="src/test/java"
                             type="XMLMAPPER"/>

        <table tableName="t_test" domainObjectName="TkTest">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
<!--        <table tableName="country">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>-->
    </context>
</generatorConfiguration>
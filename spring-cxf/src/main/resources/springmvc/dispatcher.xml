<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

    <!--http://babywolf.tk/2017/03/%E4%BD%A0%E8%BF%98%E5%9C%A8%E4%BD%BF%E7%94%A8jsp%E5%90%97,%E4%B8%BA%E4%BB%80%E4%B9%88%E4%B8%8D%E5%B0%9D%E8%AF%95%E4%B8%80%E4%B8%8Bfreemarker%E5%91%A2/-->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/view/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <mvc:view-controller path="/sample.html" view-name="sample" />

</beans>
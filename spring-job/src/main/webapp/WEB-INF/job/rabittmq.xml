<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="
       http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--官网配置指南https://docs.spring.io/spring-amqp/reference/htmlsingle/-->

    <!--配置连接-->
    <rabbit:connection-factory id="connectionFactory" host="127.0.0.1" username="guest" password="guest"  requested-heartbeat="60" virtual-host="/" />

    <!--配置RabbitTemplate-->
    <rabbit:template id="amqpTemplate" connection-factory="connectionFactory" exchange="myExchange" routing-key="foo.bar" />

    <!--配置RabbitAdmin-->
    <rabbit:admin connection-factory="connectionFactory" />

    <!--配置队列名-->
    <rabbit:queue name="myQueue" />

    <!--四种交换
    Direct Exchange
    Fanout Exchange
    Topic Exchange
    Headers Exchange-->
    <!--配置topic类型exchange-->
    <rabbit:topic-exchange name="myExchange">
        <rabbit:bindings>
            <rabbit:binding queue="myQueue" pattern="foo.*" />
        </rabbit:bindings>
    </rabbit:topic-exchange>

    <!--配置监听-->
    <rabbit:listener-container connection-factory="connectionFactory">
        <rabbit:listener ref="consumer" method="listen" queue-names="myQueue" />
    </rabbit:listener-container>
    <!--实际项目中通常实现MessageListener接口来监听消息-->
    <rabbit:listener-container connection-factory="connectionFactory">
        <rabbit:listener ref="fooMessageListener" queue-names="myQueue" />
    </rabbit:listener-container>

    <bean id="fooMessageListener" class="org.haijun.study.rabbit.FooMessageListener" />
    <!--发送伪代码
    AmqpTemplate template = ctx.getBean(RabbitTemplate.class);
    template.convertAndSend("Hello, world!");-->
    <!--消费者-->
    <bean id="consumer" class="org.haijun.study.rabbit.Consumer" />
</beans>
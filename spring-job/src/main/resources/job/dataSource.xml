    <!--
     初始化脚本，主要用来创建spring-batch运行时的数据，应用生成环境时应该去掉此配置，手工创建下对应的表
     spring-batch本身job运行需要的表的创建脚本，spring-batch.jar中默认提供了各种数据库的DDL语句
      -->
    <jdbc:initialize-database data-source="dataSource" ignore-failures="ALL"><!--ignore-failures 忽略错误，保证程序后面的处理继续执行-->
        <!--<jdbc:script location="classpath:/org/springframework/batch/core/schema-drop-mysql.sql" />-->
        <jdbc:script location="classpath:/org/springframework/batch/core/schema-mysql.sql" />
        <!--清除batch仓库的数据-->
        <!--<jdbc:script location="classpath:dbTables/my/mysql-truncate-all-table.sql" />-->
        <!--数据库引擎的区别https://www.cnblogs.com/zhengah/p/4664297.html-->
        <!--<jdbc:script location="classpath:dbTables/tables_mysql_innodb.sql" />--><!--QRTZ 数据库-->
    </jdbc:initialize-database>

</beans>